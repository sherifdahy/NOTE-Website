@using Interface.ViewModels
@model ProductVM

 <link href="~/lib/datatables/css/datatables.bootstrap4.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/products.css">


<div class="col mx-2">
    <form class="row mt-2 box-content" asp-action="add" asp-controller="products" method="post">
        <partial name="_inputPartial"></partial>
        <div class="row g-1">
            <input type="submit" class="btn btn-success col-1" value="Add">
        </div>
    </form>


    <div class="row mt-2 box-content">
        <div class="col">
            <h3 class="text-primary text-end">السلع و الخدمات</h3>
            <hr>
            <table id="datatable" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>#</th>
                        <th>الاسم</th>
                        <th>الوصف</th>
                        <th>سعر</th>
                        <th>نوع الوحدة</th>
                        <th>كود عالمي</th>
                        <th>نوع الكود العالمي</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

</div>

@section Scripts {

    <script src="~/lib/datatables/js/jquery.datatables.js"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.js"></script>
    <script src="~/js/Products.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
