@using Interface.ViewModels
@model ProductVM

<link href="~/lib/datatables/css/datatables.bootstrap4.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/pages/Receipts/index.css" />



<form class="form-data box-area" method="post" asp-controller="Products" asp-action="Add">
    <div class="first-row">
        <div class="group">
            <label for="">كود داخلي</label>
            <input asp-for="InternalId" placeholder="كود داخلي">
            <span asp-validation-for="InternalId" class="error"></span>
        </div>
        <div class="group">
            <label for="">اسم السلعة او الخدمة</label>
            <input asp-for="Name" placeholder="اسم المنتج">
            <span asp-validation-for="Name" class="error"></span>
        </div>
        <div class="group">
            <label for="">سعر الوحدة</label>
            <input asp-for="UnitPrice"  placeholder="سعر القطعة">
            <span asp-validation-for="UnitPrice" class="error"></span>
        </div>
        <div class="group">
            <label for="">وحدة القياس</label>
            <select asp-for="UnitType">
                <option value="EA">EA</option>
            </select>
            <span asp-validation-for="UnitType" class="error"></span>
        </div>
        <div class="group">
            <label for="">كود السلعة او الخدمة</label>
            <input asp-for="Code" placeholder="كود المنتج" />
            <span asp-validation-for="Code" class="error"></span>
        </div>
        <div class="group">
            <label for="">نوع الكود</label>
            <select asp-for="CodeType">
                <option value="EGS">EGS</option>
                <option value="GS1">GS1</option>
            </select>
            <span asp-validation-for="CodeType" class="error"></span>
        </div>
    </div>
    <div class="second-row">
        <div class="group">
            <label for="">وصف السلعة او الخدمة</label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="error"></span>
        </div>
        <div class="btns">
            <input type="submit" value="اضافة" class="btn-primary">
        </div>
    </div>

</form>
<div class="datatable box-area">
    <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>كود</th>
                <th>اسم</th>
                <th>وصف</th>
                <th>سعر</th>
                <th>وحدة</th>
                <th>كود</th>
                <th>نوع</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {


    <script src="~/lib/datatables/js/jquery.datatables.js"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.js"></script>
    <script src="/js/pages/Products.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
