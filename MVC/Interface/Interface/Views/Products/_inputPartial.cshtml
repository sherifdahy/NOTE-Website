@using Interface.ViewModels

@model ProductVM
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-1 flex-row-reverse text-end">
    <div class="form-group mb-2 ">
        <label>الكود الداخلي</label>
        <input type="text" asp-for="InternalId" class="form-control text-end" placeholder="الكود الداخلي">
        <span asp-validation-for="InternalId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label>اسم السلعة او الخدمة</label>
        <input type="text" asp-for="Name" class="form-control  text-end" placeholder="اسم السلعة او الخدمة">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group mb-2">
        <label>سعر الوحدة</label>
        <input type="number" asp-for="UnitPrice" class="form-control  text-end" placeholder="سعر الوحدة">
        <span asp-validation-for="UnitPrice" class="text-danger"></span>

    </div>
    <div class="form-group mb-2">
        <label>نوع الوحدة</label>
        <select  asp-for="UnitType" class="form-select  text-end">
            <option value="EA">EA</option>
        </select>
        <span asp-validation-for="UnitType" class="text-danger"></span>

    </div>
    <div class="form-group mb-2">
        <label>كود عالمي</label>
        <input type="text" asp-for="Code" class="form-control  text-end" placeholder="كود عالمي">
        <span asp-validation-for="Code" class="text-danger"></span>

    </div>
    <div class="form-group mb-2">
        <label>نوع الكود العالمي</label>
        <select asp-for="CodeType" class="form-select  text-end">
            <option value="EGS">EGS</option>
            <option value="GS1">GS1</option>
        </select>
        <span asp-validation-for="CodeType" class="text-danger"></span>

    </div>

</div>
<div class="row g-1">
    <div class="form-group mb-2  text-end">
        <label>وصف السلعة او الخدمة</label>
        <textarea class="form-control  text-end" asp-for="Description" placeholder="وصف السلعة او الخدمة"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>