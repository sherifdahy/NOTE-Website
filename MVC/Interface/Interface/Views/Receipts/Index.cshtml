@using Entities.Models.Receipt
@model receipt

<link href="~/lib/datatables/css/datatables.bootstrap4.css" rel="stylesheet" />

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.3.3/css/select.dataTables.min.css">



<div class="col card mt-5" style="height:fit-content">
    <div class="card-header">
        <h3 class="text-end ">الايصالات</h3>
    </div>
    <div class="card-body overflow-auto">
        <table class="table table-hover table-responsive table-bordered w-100 text-center " id="receipts_dataTable" dir="rtl">
            <thead class="table-info " style="line-height:3rem">
                <tr>
                    <th>id</th>
                    <th>رقم الايصال</th>
                    <th>تاريخ</th>
                    <th>نوع</th>
                    <th>اسم العميل</th>
                    <th>معرف العميل</th>
                    <th>الاجمالي</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>






@section Scripts{
    <script src="~/lib/datatables/js/jquery.datatables.js"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>
    <script type="module" src="~/js/Receipt/Index.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}