@using Interface.ViewModels
@model RegisterVM
@{
    Layout = "_LayoutAccount";
}

<link rel="stylesheet" href="~/css/pages/registration.css">


<form asp-action="Register" asp-controller="Account" method="post">
    <div class="group">
        <input type="text" asp-for=Username placeholder="اسم المستخدم">
        <span asp-validation-for="Username" class="error"></span>
    </div>
    <div class="group">
        <input type="email" asp-for="Email" placeholder="البريد الالكتروني">
        <span asp-validation-for="Email" class="error"></span>

    </div>
    <div class="group">
        <input type="password" asp-for="Password" placeholder="كلمة السر">
        <span asp-validation-for="Password" class="error"></span>

    </div>
    <div class="group">
        <input type="password" asp-for="ConfirmPassword" placeholder="تأكيد كلمة السر">
        <span asp-validation-for="ConfirmPassword" class="error"></span>

    </div>
    <div class="group">
        <input type="submit" class="btn-primary" value="تسيجل">
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
