@using Interface.ViewModels
@model LoginVM

@{
   
    Layout = "_LayoutAccount";
}


<div class="container-sm">
    <form class="box-content" asp-action="Login" asp-controller="Account" method="post" dir="rtl">
        <h3 class="text-center text-primary">
            <i class="fa-solid fa-people-robbery"></i>
            تسجيل دخول ..
        </h3>
        <hr />
        <div class="form-group mt-2">
            <input class="form-control" type="email" asp-for="Email" placeholder="البريد الالكتروني">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input class="form-control" type="password" asp-for="Password" placeholder="كلمة السر">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for=RememberMe type="checkbox">
            <span>تذكرني</span>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-success" value="تسجيل دخول">
        </div>
        <div asp-validation-summary="ModelOnly" class="error"></div>
    </form>
</div>

    

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
