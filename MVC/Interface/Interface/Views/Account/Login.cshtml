@using Interface.ViewModels
@model LoginVM
@{
   
    Layout = "_LayoutAccount";
}

        
<form class="form" asp-action="Login" asp-controller="Account" method="post">
    <div class="form-header">
        <h3>Login</h3>
    </div>
    <div class="form-body">
        <div class="form-group d-flex align-items-center">
            <i class="fa-solid fa-at icon"></i>
            <input class="form-control " asp-for="Email" placeholder="Email">
        </div>
        <div class="form-group d-flex align-items-center">
            <i class="fa-solid fa-lock icon"></i>
            <input class="form-control " asp-for="Password" placeholder="Password">
        </div>
        <a href="#">Forgot Password?</a>
        <div class="form-group">
            <input type="submit" class="btn btn-primary form-control" value="Login">
        </div>
        <div>
            <span>Don't have an account?</span>
            <a asp-action="register" asp-controller="account">Signup</a>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</form>
    

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
